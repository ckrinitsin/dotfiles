#!/usr/bin/bash

# install packages
sudo pacman -S alacritty dunst nvim qutebrowser starship xdg-user-dirs zathura meson ninja

# install rofi and dmenu for wayland
git clone https://github.com/lbonn/rofi.git /tmp/rofi
cd /tmp/rofi
meson setup build
ninja -C build
sudo ninja -C build install
git clone https://git.sr.ht/~fabiancodes/dmenu-wayland /tmp/dmenu-wl
cd /tmp/dmenu-wl
mkdir build
meson build
ninja -C build
sudo ninja -C build install
cd && rm -rf /tmp/dmenu-wl /tmp/rofi
